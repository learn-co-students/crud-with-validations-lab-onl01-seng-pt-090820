<%= form_for(@song) do |f| %>
    <% if @song.errors.any? %>
        <h2>The following error(s) prohibited this song from being saved:</h2>
        <ul><% @song.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %></ul>
    <% end %>

    <%= f.label :title %><br>
    <%= f.text_field :title %><br>

    <%= f.label :released %><br>
    <%= f.check_box :released %><br>

    <%= f.label :release_year %><br>
    <%= f.number_field :release_year %><br>

    <%= f.label :artist_name %><br>
    <%= f.text_field :artist_name %><br>

    <%= f.label :genre %><br>
    <%= f.text_field :genre %><br>

    <%= f.submit %>
<% end %>