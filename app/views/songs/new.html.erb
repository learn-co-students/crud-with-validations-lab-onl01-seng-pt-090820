<h1>Create a New Song!</h1>

<% if @song.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(@song.errors.count, "error") %> prohibited this song from saving</h2>
        <% @song.errors.full_messages.each do |message| %>
            <%= message %><br>
        <% end %>
    </div>
<% end %>

<%= form_for @song do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br>
    <%= f.label :released %>?
    <%= f.check_box :released, {}, true, false %><br>
    <%= f.label :release_year %>
    <%= f.text_field :release_year %><br>
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %><br>
    <%= f.label :genre %>
    <%= f.text_field :genre %><br>
    <%= f.submit %>
<% end %>